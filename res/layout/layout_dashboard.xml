<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        style="@style/CurrentLocation"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:paddingBottom="5dp">

        <Button
            android:id="@+id/goUp"
            android:layout_width="@dimen/back_button_size"
            android:layout_height="@dimen/back_button_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/back_button"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/currentLocation"
            style="@style/CurrentLocationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@drawable/background_button_line"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center">

            <Button
                android:id="@+id/reloadBtn"
                android:layout_width="@dimen/path_height"
                android:layout_height="@dimen/path_height"
                android:background="@drawable/refresh_button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center">

            <Button
                android:id="@+id/upload"
                android:layout_width="@dimen/path_height"
                android:layout_height="@dimen/path_height"
                android:background="@drawable/upload_button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center">

            <Button
                android:id="@+id/create"
                android:layout_width="@dimen/path_height"
                android:layout_height="@dimen/path_height"
                android:background="@drawable/create_button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6.8"
            android:gravity="right">

            <Button
                android:layout_width="15dp"
                android:layout_height="@dimen/path_height"
                android:background="@drawable/top_menu_button" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/filesListView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:choiceMode="singleChoice"
        android:layout_weight="1"></ListView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.google.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/admob_publisher_id"
            ads:loadAdOnCreate="true" />
    </LinearLayout>
</LinearLayout>