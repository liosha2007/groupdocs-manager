<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GroupDocsManagerTheme" parent="android:Theme.Black.NoTitleBar.Fullscreen">
        <!--<item name="android:textAppearance">@style/MyTextAppearance</item>-->
        <item name="android:textAppearance">@style/MyTextAppearance</item>
        <item name="android:textViewStyle">@style/Widget.TextView</item>
        <!--<item name="android:alertDialogStyle">@style/CustomDialog</item>-->
        <!--<item name="android:alertDialogTheme">@style/CustomDialog</item>-->
        <!--<item name="android:dialogPreferenceStyle">@style/CustomDialog</item>-->
    </style>

    <!--<style name="MyTextAppearance" parent="@android:style/Widget.Button">-->
        <!--<item name="android:textColor">@android:color/white</item>-->
    <!--</style>-->

    <style name="Widget.TextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="MyTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="mainLayout">
        <item name="android:background">@drawable/background</item>
    </style>

    <style name="WhiteTextStyle">
        <item name="android:textColor">@color/white_dark</item>
    </style>

    <style name="dashboardFileName" parent="WhiteTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="dashboardFileSize">
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/gray_light</item>
    </style>

    <style name="settingsTitle" parent="WhiteTextStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="dialogTitle" parent="WhiteTextStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="settingsLabel" parent="WhiteTextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="settingsButton">
        <item name="android:textSize">22px</item>
    </style>

    <style name="CurrentLocation">
        <item name="android:background">@drawable/background_path_line</item>
    </style>

    <style name="CurrentLocationText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/gray_light</item>
    </style>

    <style name="CustomEditText">
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:textColor">@color/settings_text</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>


    <style name="selectDialogFileName" parent="WhiteTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="selectDialogFileSize">
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/gray_light</item>
    </style>

    <style name="CustomDialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:listViewStyle">@style/CustomListView</item>
    </style>

    <style name="CustomListView">
        <item name="android:background">@drawable/dialog_file_background</item>
    </style>
</resources>
